<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title"><%= t('.title', default: @document.class.model_name.human ) %></h3>
        <h6 class="card-subtitle"></h6>
      </div>
      <div class="card-body">
          <div class="form-group row">
            <label class="col-form-label col-xs-2 col-sm-2 col-md-2 text-sm-right"><%= Document.human_attribute_name :number %></label>
            <div class="col-xs-12 col-sm-10 col-md-10">
              <p class="form-control-plaintext"><%= "#{@document.number}/#{@document.year}" %></p>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-form-label col-xs-2 col-sm-2 col-md-2 text-sm-right"><%= Document.human_attribute_name :date %></label>
            <div class="col-xs-12 col-sm-10 col-md-10">
              <p class="form-control-plaintext"><%= @document.date.try(:strftime, "%d/%m/%Y") %></p>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-form-label col-xs-2 col-sm-2 col-md-2 text-sm-right"><%= Document.human_attribute_name :company_id %></label>
            <div class="col-xs-12 col-sm-10 col-md-10">
              <p class="form-control-plaintext"><%= @document.company_contact.company.name %></p>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-form-label col-xs-2 col-sm-2 col-md-2 text-sm-right"><%= Document.human_attribute_name :company_contact_id %></label>
            <div class="col-xs-12 col-sm-10 col-md-10">
              <p class="form-control-plaintext"><%= @document.company_contact.name %></p>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-form-label col-xs-2 col-sm-2 col-md-2 text-sm-right"><%= Document.human_attribute_name :subject_id %></label>
            <div class="col-xs-12 col-sm-10 col-md-10">
              <p class="form-control-plaintext"><%= @document.subject.description %></p>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-form-label col-xs-2 col-sm-2 col-md-2 text-sm-right"><%= Document.human_attribute_name :responsible_id %></label>
            <div class="col-xs-12 col-sm-10 col-md-10">
              <p class="form-control-plaintext"><%= @document.responsible.name %></p>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-form-label col-xs-2 col-sm-2 col-md-2 text-sm-right"><%= Document.human_attribute_name :text %></label>
            <div class="col-xs-12 col-sm-10 col-md-10">
              <p class="form-control-plaintext"><%= @document.text %></p>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-10 ml-sm-auto">
              <%= link_to t('helpers.links.list'), documents_path, class: 'btn btn-primary' %>
              <%= link_to t('helpers.links.edit'), edit_document_path(@document), class: 'btn btn-success' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>