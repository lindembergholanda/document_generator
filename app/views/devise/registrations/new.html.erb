<div class="login-page">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body-login">
            <h5 class="card-title text-center text-white">Sign Up</h5>
            <%= flash_messages %>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="form-group">
                <div class="col-12">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-login', placeholder: 'E-mail'  %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-12">
                  <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-login', placeholder: 'New Password (6 characters minimum) '  %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-12">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-login', placeholder: 'Password Confirmation'  %>
                </div>
              </div>
              <div class="actions">
                <%= f.submit "Register", class: 'btn btn-primary btn-block btn-lg waves-effect waves-light btn-login' %>
              </div>
            <% end %>
            </br>
            <div class="form-group">
              <div class="text-center">
                <%= link_to "Already have account?", new_session_path(resource_name), class: 'text-muted' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>