<div class="login-page">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body-login">
            <h5 class="card-title text-center text-white">Reset Password</h5>
            <%= flash_messages %>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <div class="form-group">
                <div class="col-12">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-login', placeholder: 'E-mail' %>
                </div>
              </div>
              <div class="actions">
                <%= f.submit "Send Mail", class: 'btn btn-primary btn-block btn-lg waves-effect waves-light btn-login' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #2a323c;
  }
</style>