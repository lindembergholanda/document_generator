<div class="row">
  <div class="col-sm-6"><%= content_tag :h3, t('.title', default: Company.model_name.human.pluralize.upcase), style: 'margin-top: 0;' %></div>
  <div class="col-sm-6 pull-right" style="text-align: right;"><%= link_to t('helpers.links.new'), new_company_path, class: 'btn btn-primary btn-sm' %></div>
</div>


<table class="table table-striped table-bordered">
  <thead style="font-size: smaller;">
    <tr>
      <th><%= Company.human_attribute_name :name %></th>
      <th><%= Company.human_attribute_name :trade_name %></th>
      <th><%= Company.human_attribute_name :cnpj %></th>
      <th style="width: 15%;"><%= t('helpers.links.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.trade_name %></td>
        <td><%= company.cnpj %></td>
        <td>
        <%=
          btn = link_to_show(company_path(company))
          btn << link_to_edit(edit_company_path(company))
          btn << link_to_delete(company_path(company))
          content_tag :div, btn, class: 'btn-group', role:'group'
          %>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>