<%= form_for(@subject) do |f| %>
  <%= error_messages_for @subject %>
  <div class="form-group row">
    <%= f.label :document_type_id, class: 'col-form-label col-xs-2 col-sm-2 col-md-2 text-sm-right' %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <%= f.collection_select :document_type_id, @document_types, :id, :description, {prompt: t('helpers.select.prompt') }, {class: 'form-control', placeholder: (Subject.human_attribute_name :document_type_id), maxlength: 10}  %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: 'col-form-label col-xs-2 col-sm-2 col-md-2 text-sm-right' %>
    <div class="col-xs-12 col-sm-6 col-md-6">
      <%= f.text_field :description, class: 'form-control', placeholder: (Subject.human_attribute_name :description), maxlength: 100  %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :text, class: 'col-form-label col-xs-2 col-sm-2 col-md-2 text-sm-right' %>
    <div class="col-xs-12 col-sm-6 col-md-6">
      <%= f.text_area :text, class: 'form-control', placeholder: (Subject.human_attribute_name :text), rows: 5, maxlength: 250  %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10 ml-sm-auto">
      <%= link_to_index subjects_path, class: 'btn btn-primary' %>
      <%= f.submit nil, class: 'btn btn-success', data: { disable_with: disable_with } %>
    </div>
  </div>
<% end %>
