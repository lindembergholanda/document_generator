<%= form_for(@document_type) do |f| %>
  <%= error_messages_for @document_type %>
  <div class="form-group row">
    <%= f.label :description, class: 'col-form-label col-xs-2 col-sm-2 col-md-2 text-sm-right' %>
    <div class="col-xs-12 col-sm-10 col-md-10">
      <%= f.text_field :description, class: 'form-control', placeholder: (DocumentType.human_attribute_name :description), maxlength: 100  %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10 ml-sm-auto">
      <%= link_to_index document_types_path, class: 'btn btn-primary' %>
      <%= f.submit nil, class: 'btn btn-success', data: { disable_with: disable_with } %>
    </div>
  </div>
<% end %>
