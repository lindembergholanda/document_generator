<div class="row">
  <div class="col-sm-6"><%= content_tag :h3, t('.title', default: DocumentType.model_name.human.pluralize.upcase), style: 'margin-top: 0;' %></div>
  <div class="col-sm-6 pull-right" style="text-align: right;"><%= link_to t('helpers.links.new'), new_document_type_path, class: 'btn btn-primary btn-sm' %></div>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= DocumentType.human_attribute_name :description %></th>
      <th style="width: 15%;"><%= t('helpers.links.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @document_types.each do |document_type| %>
      <tr>
        <td><%= document_type.description %></th>
        <td>
          <%= 
            btn = link_to_show(document_type_path(document_type))
            btn << link_to_edit(edit_document_type_path(document_type))
            btn << link_to_delete(document_type_path(document_type))
            content_tag :div, btn, class: 'btn-group', role:'group'
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>