<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title"><%= t('.title', default: @document_type.class.model_name.human ) %></h5>
        <h6 class="card-subtitle"></h6>
      </div>
      <div class="card-body">
        <div class="form-group row">
          <label class="col-form-label col-xs-2 col-sm-2 col-md-2 text-sm-right"><%= DocumentType.human_attribute_name :description %></label>
          <div class="col-xs-12 col-sm-10 col-md-10">
            <p class="form-control-plaintext"><%= @document_type.description %></p>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10 ml-sm-auto">
            <%= link_to t('helpers.links.list'), document_types_path, class: 'btn btn-primary' %>
            <%= link_to t('helpers.links.edit'), edit_document_type_path(@document_type), class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>