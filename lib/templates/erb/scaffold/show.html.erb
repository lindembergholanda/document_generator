<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title"><%%= t('.title', default: @<%= singular_table_name %>.class.model_name.human ) %></h3>
        <h6 class="card-subtitle"></h6>
      </div>
      <div class="card-body">
        <% attributes.each do |attribute| -%>
          <div class="form-group row">
            <label class="col-form-label col-xs-2 col-sm-2 col-md-2 text-sm-right"><%%= <%= singular_table_name.capitalize %>.human_attribute_name :<%= attribute.name %> %></label>
            <div class="col-xs-12 col-sm-10 col-md-10">
              <p class="form-control-plaintext"><%%= @<%= singular_table_name %>.<%= attribute.name %> %></p>
            </div>
          </div>
        <% end -%>
        <div class="form-group row">
          <div class="col-sm-10 ml-sm-auto">
            <%%= link_to t('helpers.links.list'), <%= plural_table_name %>_path, class: 'btn btn-primary' %>
            <%%= link_to t('helpers.links.edit'), edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>